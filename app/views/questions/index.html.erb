<p id="notice"><%= notice %></p>

<h3>Questions</h3>

<div class="row">
  <div class="col-md-12">
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= button_to 'Show', question, class: 'btn btn-primary',method: :get %></td>
        <td><%= link_to 'Edit', edit_question_path(question),class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <div>
      <%= button_to 'New Question', new_question_path, class: 'btn btn-primary',method: :get %>
    <div>
  </div>
</div>
